---
import { Image } from "astro:assets";
import BaseLayout from "@/layouts/BaseLayout.astro";
const { frontmatter } = Astro.props;

// Get the resolved image src for meta tags
const imageUrl = frontmatter.image?.url?.src || "/ogdefault.png";
---

<BaseLayout
  title={`${frontmatter.title} - Joacim Eldre`}
  description={frontmatter.description}
  image={imageUrl}
  type="article"
>
  <section>
    <div class="py-24">
      <div class="lg:text-center">
        <div class="max-w-xl mx-auto">
          <h1
            class="text-4xl text-balance font-medium font-display text-base-900"
          >
            {frontmatter.title}
          </h1>
          <p class="max-w-2xl mx-auto mt-4 text-base-600 text-sm text-balance">
            <em>{frontmatter.description}</em>
          </p>
        </div>
        <Image
          width={1280}
          height={720}
          src={frontmatter.image.url}
          alt={frontmatter.image.alt}
          class="object-cover object-center w-full aspect-12/7 rounded-xl mt-4"
        />
        <div class="flex flex-col justify-between mt-4 md:flex-row">
          <p class="text-xs text-base-600">
            {frontmatter.pubDate.toString().slice(0, 15)} - Written by: {
              frontmatter.author
            }
          </p>
          <div class="flex gap-3">
            {
              frontmatter.tags.map((tag) => (
                <span class="underline hover:decoration-wavy text-xs font-medium text-base-600">
                  <a href={`/tags/${tag}`}>{tag}</a>
                </span>
              ))
            }
          </div>
        </div>
      </div>

      <div class="prose prose-sm max-w-md mt-12 mx-auto text-base-900">
        <slot />
      </div>
    </div>
  </section>
</BaseLayout>
