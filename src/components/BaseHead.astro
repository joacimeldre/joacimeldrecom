---
import "../styles/global.css";
import { AstroSeo } from "@astrolib/seo";
import defaultOgImage from "../images/ogdefault.png";

interface Props {
  title?: string;
  description?: string;
  image?: ImageMetadata | string;
  canonical?: string;
  type?: "website" | "article";
}

const {
  title = "Joacim Eldre",
  description = "Uhuuu, fancy website is fancy",
  image = defaultOgImage,
  canonical = Astro.url.href,
  type = "website",
} = Astro.props;

// Handle image - if it's an ImageMetadata object, use .src, otherwise use as string
const imageUrl = image
  ? typeof image === "string"
    ? image
    : image.src
  : undefined;

// Construct full URL for OG tags (they need absolute URLs)
const fullImageUrl = imageUrl
  ? imageUrl.startsWith("http")
    ? imageUrl
    : new URL(imageUrl, Astro.site || Astro.url.origin).href
  : undefined;
---

<AstroSeo
  title={title}
  description={description}
  canonical={canonical}
  openGraph={{
    url: canonical,
    title: title,
    description: description,
    images: fullImageUrl
      ? [
          {
            url: fullImageUrl,
            width: 1200,
            height: 630,
            alt: title,
            type: "image/jpeg",
          },
        ]
      : undefined,
    site_name: "Joacim Eldre",
    type: type,
    locale: "en_US",
  }}
/>

<meta charset="UTF-8" />
<meta name="viewport" content="width=device-width, initial-scale=1.0" />
<title>{title}</title>
<meta name="description" content={description} />

<!-- Favicons -->
<link rel="icon" type="image/png" href="/favicon-96x96.png" sizes="96x96" />
<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
<link rel="shortcut icon" href="/favicon.ico" />
<link rel="apple-touch-icon" sizes="180x180" href="/apple-touch-icon.png" />
<link rel="manifest" href="/site.webmanifest" />

<!-- Canonical URL -->
<link rel="canonical" href={canonical} />

<!-- Additional SEO -->
<meta name="robots" content="index, follow" />
<meta name="googlebot" content="index, follow" />
<meta name="theme-color" content="#ffffff" />
<meta http-equiv="X-UA-Compatible" content="IE=edge" />

<script defer src="https://unpkg.com/alpinejs@3.x.x/dist/cdn.min.js"></script>
