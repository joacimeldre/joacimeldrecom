---
import { Image } from "astro:assets";
const { title, url, description, pubDate, author, image, tags } = Astro.props;

console.log("pubDate value:", pubDate);
console.log("pubDate type:", typeof pubDate);

const formattedDate = (() => {
  // pubDate comes in as a string like "2026-01-19"
  const [year, month, day] = pubDate.split("-");
  // Create date properly to avoid timezone issues
  const date = new Date(year, month - 1, day);
  const monthName = date.toLocaleDateString("en-US", { month: "short" });

  return `${year} ${monthName} ${day}`;
})();

console.log("formattedDate:", formattedDate);
---

<article>
  <h3
    class="mt-4 text-base text-base-900 text-balance flex items-baseline gap-1"
  >
    <time datetime={pubDate} class="shrink-0">{formattedDate}</time>
    <a href={url} class="underline hover:decoration-wavy">{title}</a>
  </h3>
</article>
